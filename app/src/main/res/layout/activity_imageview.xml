<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity_Main">

    <TextView
        android:id="@+id/activity_imageView_color_title"
        android:text="ColorNET: ImageViewer"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/activity_imageView_color_space_1"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@id/activity_imageView_color_title" />

    <ImageView
        android:id="@+id/activity_imageView_color_image"
        android:layout_width="fill_parent"
        android:layout_height="365dp"
        android:layout_below="@id/activity_imageView_color_space_1"
        android:src="@drawable/ic_launcher"/>

    <!-- BUTTON FOOTER -->

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

</RelativeLayout>
